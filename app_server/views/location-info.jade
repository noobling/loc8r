include _includes/sharedHTMLfunctions

extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          +outputRating(info.rating)
          
          p= info.address
          
          .panel.panel-primary
            .panel-heading
              h2.panel-title= openingTimes.title
            .panel-body
              p Monday - Friday : #{openingTimes.times.weekdays}
              p Saturday : #{openingTimes.times.saturday}
              p Sunday : #{openingTimes.times.sunday}
          
          .panel.panel-primary
            .panel-heading
              h2.panel-title Facilities
            .panel-body
              each facility in facilities
                span.label.label-warning
                  span.glyphicon.glyphicon-ok 
                  | &nbsp;facilitiy
                | &nbsp;  
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title= map.title
            .panel-body
              img.img-responsive.img-rounded(src=map.url)
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href='/location/review/new') Add Review
              h2.panel-title Reviews
            .panel-body.review-container
              each review in reviews
                .row
                  .review
                    .well.well-sm.review-header
                      +outputRating(review.rating)
                      span.reviewAuthor= review.author
                      small.reviewTime= review.timeStamp 
                    .col-xs-12
                      p= review.userText

    .col-xs-12.col-md-3              
      p.lead= aboutLocation
      p= suggestion             
                  
                  